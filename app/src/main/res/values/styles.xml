<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!--没有选中的样式-->
    <style name="bottom_normal_text">
        <item name="android:textColor">@color/colorSilver</item>
        <item name="android:textSize">@dimen/dp_15</item>
    </style>

    <!--选中的样式-->
    <style name="bottom_selected_text">
        <item name="android:textColor">@color/colorBlock</item>
        <item name="android:textSize">@dimen/dp_18</item>
    </style>

</resources>
